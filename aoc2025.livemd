defmodule Day7 do
  import AOC
  def part1(input) do
    m = s2map(input)
    for {p, v} <- Enum.sort(m), reduce: Map.put(m, :c, 0) do m ->
      case {v, m[up p], m.c} do
        {?., b, _} when b in [?S, ?|] -> %{m | p => ?|}
        {?^, b, c} when b in [?S, ?|] -> %{m | left(p) => ?|, right(p) => ?|, c: c + 1}
        _ -> m
      end
    end
    |> Map.get(:c)
  end
  def part2(input) do
    m = s2map(input)
    [s] = for {p, ?S} <- m, do: p
    solve2(m, s)
  end
  def solve2(m, p) do
    cache p do
      case m[p] do
        nil -> 1
        ?^ -> solve2(m, left(p)) + solve2(m, right(p))
        _ -> solve2(m, down(p))
      end
    end
  end
end

